{
  "name": "darkg-nexus",
  "version": "1.0.0",
  "description": "Sovereign AI Agent",
  "main": "main.js",
  "author": "Gopal Dutta",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.darkg.nexus",
    "productName": "DarkG Nexus",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/darkg_backend",
        "to": "backend",
        "filter": ["**/*"]
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.0"
  },
  "dependencies": {
    "marked": "^12.0.0", 
    "highlight.js": "^11.9.0"
  }
}